<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>

<% if @user.user_group == 1 %>
    <%= render 'show-patient' %>
<% elsif @user.user_group == 2 %>
    <%= render 'show-doctor' %>
<% end %>

<% if current_user?(@user) %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3 class="show-section">Please ensure this information is kept up-to-date when using Docnect. <%= link_to 'Click here', edit_user_path(@user) %> to update your profile now.</h3>
      </div>
    </div>
<% end %>

<% unless @diagnosis.blank? %>
    <h3><%= simple_format(@diagnosis.last.diagnosis) %></h3>
    <% @diagnosis.each do |diagnosis| %>
        <% unless diagnosis.answer.blank? %>
            <%= simple_format(diagnosis.answer) %>
        <% end %>
        <% unless diagnosis.question.blank? %>
            <h3><%= diagnosis.question %></h3>
        <% end %>
    <% end %>
    <h3><%= @user.name %> was diagnosed <%= time_ago_in_words(@user.last_test) %> ago.</h3>
<% end %>