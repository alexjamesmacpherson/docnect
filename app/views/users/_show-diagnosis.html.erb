<% if !current_user.group?(1) && !@diagnosis.blank?  %>
    <h3 class="show-section">Docnect Diagnostic Test:</h3>
    <div class="row">
      <div class="col-md-6">
        <h4 class="patient-title">Inferred Diagnosis:</h4>
      </div>
      <div class="col-md-6 patient-info">
        <%= simple_format(@diagnosis.last.diagnosis) %>
      </div>
    </div>

    <h3 class="show-section">Patient Answers:</h3>
    <% @diagnosis.each do |diagnosis| %>
        <% unless diagnosis.answer.blank? %>
            <div class="col-md-6 patient-info">
              <%= simple_format(diagnosis.answer) %>
            </div>
            </div>
        <% end %>
        <% unless diagnosis.question.blank? %>
            <div class="row">
              <div class="col-md-6">
                <h4 class="patient-title"><%= diagnosis.question %></h4>
              </div>
        <% end %>
    <% end %>
    <h3 class="show-section"><%= @user.name %> was last diagnosed <%= time_ago_in_words(@user.last_test) %> ago.</h3>
<% elsif @user.last_test %>
    <h3 class="show-section">Docnect Diagnostic Test:</h3>
    <div class="row">
      <div class="col-md-6">
        <h4 class="patient-title">Last Diagnostic Test Completed:</h4>
      </div>
      <div class="col-md-6 patient-info"><%= time_ago_in_words(@user.last_test) %> ago</div>
    </div>
    <% unless current_user.group?(1) %>
        <div class="row">
          <div class="col-md-6">
            <h4 class="patient-title">Current Test:</h4>
          </div>
          <div class="col-md-6 patient-info">Incomplete</div>
        </div>
    <% end %>
<% end %>