<% provide(:title, @title) %>
<h1><%= @title %></h1>

<ul class="item-list">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.name, user %> (<%= user.email %>)
        <% if current_user.user_group == 0 && !current_user?(user) %>
            | <%= user.user_group == 1 ? 'Patient' : 'Doctor' %>
            | <%= link_to 'Delete User', user, method: :delete,
                          data: { confirm: "This action cannot be undone. Are you sure you wish to delete #{user.name}'s account from Docnect?" } %>
        <% end %>
      </li>
  <% end %>
</ul>

<div class="pagination">
  <%= will_paginate @users, :container => false %>
  <div class="center"><%= page_entries_info %></div>
</div>
