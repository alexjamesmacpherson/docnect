<% provide(:title, 'Log In') %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

        <%= f.label :remember_me, class: 'checkbox inline' do %>
            <%= f.check_box :remember_me %>
            <span style="margin-left: 20px">Remember me</span>
        <% end %>

        <%= f.submit 'Log In', class: 'btn btn-primary' %>
    <% end %>

    <h3 class="show-section"><%= link_to "I've forgotten my password.", new_password_reset_path %></h3>
    <h3 class="show-section">Don't have an account? <%= link_to 'Click here', signup_path %> to sign up to Docnect!</h3>
  </div>
</div>