<% provide(:title, 'Diagnostic Test') %>
<h1><%= @question.question %></h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(@answer, url: test_input_path) do |f| %>
        <%= f.text_area :answer, rows: '8', class: 'form-control', placeholder: 'Type your response here. Please be as detailed as possible, and ensure all information stated is correct and up-to-date.' %>

        <%= f.submit 'Complete Test', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>